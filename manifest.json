{
    "name": "Hotstar Uninterrupted",
    "version": "1.0",
    "description": "Watching cricket live on hotstar for free",
    "manifest_version": 2,
    "background": {
        "scripts": [
            "background.js"
        ],
        "persistent": true
    },
    "permissions": [
        "tabs",
        "activeTab"
    ],
    "browser_action": {},
    "content_scripts": [{
    "js" : ["background.js"],
    "matches": ["https://www.hotstar.com/*"]
  }]
}